{
  "name": "oh-my-stock-screener",
  "version": "1.0.0",
  "description": "Oh My Stock Screener - A specialized npm task runner for screening potential Indonesian stocks based on technical analysis",
  "main": "src/index.js",
  "bin": {
    "omss": "bin/cli.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "pnpm exec nodemon src/index.js",
    "test": "node test/runner.test.js",
    "build": "echo 'Building project...' && node scripts/build.js",
    "lint": "echo 'Linting code...'",
    "clean": "echo 'Cleaning build files...'",
    "screen": "node bin/cli.js run daily-screen",
    "screen:momentum": "node bin/cli.js run momentum-scan",
    "schedule": "node bin/cli.js schedule --task daily-screen --time '15:30'",
    "report": "node bin/cli.js report --latest",
    "omss": "node bin/cli.js"
  },
  "keywords": [
    "stock-screener",
    "indonesia",
    "idx",
    "technical-analysis",
    "stocks",
    "trading",
    "automation",
    "cli",
    "omss"
  ],
  "author": "OhMyMooon <imam.sy11@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "pnpm": ">=7.0.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "chalk": "^5.5.0",
    "cheerio": "^1.1.2",
    "commander": "^14.0.0",
    "fs-extra": "^11.3.1",
    "glob": "^11.0.3",
    "inquirer": "^12.9.2",
    "node-cron": "^4.2.1",
    "technicalindicators": "^3.1.0",
    "yahoo-finance2": "^2.13.3"
  },
  "devDependencies": {
    "eslint": "^9.33.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ohmymooon/idx-screening.git"
  },
  "bugs": {
    "url": "https://github.com/ohmymooon/idx-screening/issues"
  },
  "homepage": "https://github.com/ohmymooon/idx-screening#readme"
}